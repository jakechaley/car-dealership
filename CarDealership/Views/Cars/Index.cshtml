
<!DOCTYPE html>
<html>
  <head>
    <meta charset="utf-8">
    <title>My To-Do List!</title>
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.0/css/bootstrap.min.css" integrity="sha384-9aIt2nRpC12Uk9gS9baDl411NQApFmC26EwAOH8WgZl5MYYxFfc+NcPb1dKGj7Sk" crossorigin="anonymous">
  </head>
  <body>
    @using CarDealership.Models;

    <h1>Epicardus Car Dealership</h1>
    @if (Model.Count == 0)
    {
      <p>There are no items in the list.</p>
    }
    <ul>
      @foreach (Car car in Model)
      {
        <li>Make/Model: @car.MakeModel, Miles: @car.Miles, Price: $@car.Price</li>
      }

    </ul>
    <a href='/cars/new'><button class="btn btn-warning">Add a new car</button></a>
    <a href='/'><button class="btn btn-warning">Take Me Home</button></a>
  </body>
</html>